---
// Questionnaire Info Button - Astro component with minimal JS
import { getAssessmentTranslations } from '@/locales';

export interface Props {
  assessmentId: string;
  buttonText: string;
  language?: string;
}

const { assessmentId, buttonText, language = 'en' } = Astro.props;

// Get assessment data and translations
const { questionBankAdapter } = await import('@/lib/assessment/QuestionBankAdapter');
const assessment = questionBankAdapter.getAssessmentType(assessmentId);
const assessmentTranslations = getAssessmentTranslations(language as any);

if (!assessment) {
  throw new Error(`Assessment with ID ${assessmentId} not found`);
}

// Helper function to get translation with parameter replacement
function t(key: string, params?: Record<string, any>): string {
  const keys = key.split('.');
  let value: any = assessmentTranslations;
  
  for (const k of keys) {
    if (value && typeof value === 'object' && k in value) {
      value = value[k];
    } else {
      return key;
    }
  }
  
  if (typeof value === 'string') {
    if (params) {
      return value.replace(/\{(\w+)\}/g, (match, paramKey) => {
        return params[paramKey] !== undefined ? String(params[paramKey]) : match;
      });
    }
    return value;
  }
  
  return key;
}
---

<button
  id={`info-btn-${assessmentId}`}
  class="btn btn-outline btn-primary w-full"
  data-assessment-id={assessmentId}
  data-language={language}
>
  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
  </svg>
  {buttonText}
</button>

<!-- Modal (hidden by default) -->
<div id={`modal-${assessmentId}`} class="modal">
  <div class="modal-box max-w-2xl max-h-[90vh] overflow-y-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        <div>
          <h2 class="text-xl font-bold">
            {assessment.name}
          </h2>
          <p class="text-sm opacity-70">
            {t('questionnaireInfo.mentalHealthAssessment')}
          </p>
        </div>
      </div>
      <button
        class="btn btn-sm btn-circle btn-ghost"
        data-modal-close={assessmentId}
        aria-label={t('common.close')}
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="space-y-6">
      <!-- Quick Info Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="stat bg-primary/10 rounded-lg">
          <div class="stat-value text-primary">
            {assessment.questions.length}
          </div>
          <div class="stat-title">
            {t('questionnaireInfo.questions')}
          </div>
        </div>
        <div class="stat bg-secondary/10 rounded-lg">
          <div class="stat-value text-secondary">
            {assessment.duration}
          </div>
          <div class="stat-title">
            {t('questionnaireInfo.minutes')}
          </div>
        </div>
        <div class="stat bg-accent/10 rounded-lg">
          <div class="stat-value">
            <div class="badge badge-success">
              {t('questionnaireInfo.difficulty.beginner')}
            </div>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div>
        <h3 class="text-lg font-semibold mb-3">
          {t('questionnaireInfo.description')}
        </h3>
        <p class="leading-relaxed">
          {assessment.description}
        </p>
      </div>

      <!-- Purpose -->
      <div>
        <h3 class="text-lg font-semibold mb-3">
          {t('questionnaireInfo.purpose')}
        </h3>
        <p class="leading-relaxed">
          {t('questionnaireInfo.purposeDescription')}
        </p>
      </div>

      <!-- What to Expect -->
      <div>
        <h3 class="text-lg font-semibold mb-3">
          {t('questionnaireInfo.whatToExpect')}
        </h3>
        <div class="space-y-3">
          <div class="flex items-start space-x-3">
            <div class="badge badge-primary badge-sm">1</div>
            <p>
              {t('questionnaireInfo.steps.step1', {
                count: assessment.questions.length,
                time: assessment.duration
              })}
            </p>
          </div>
          <div class="flex items-start space-x-3">
            <div class="badge badge-primary badge-sm">2</div>
            <p>
              {t('questionnaireInfo.steps.step2')}
            </p>
          </div>
          <div class="flex items-start space-x-3">
            <div class="badge badge-primary badge-sm">3</div>
            <p>
              {t('questionnaireInfo.steps.step3')}
            </p>
          </div>
        </div>
      </div>

      <!-- Professional Background -->
      <div>
        <h3 class="text-lg font-semibold mb-3">
          {t('questionnaireInfo.professionalBackground')}
        </h3>
        <div class="alert alert-success">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <div>
            <div class="font-medium">
              {t('questionnaireInfo.validated')}
            </div>
            <div class="text-sm">
              {t('questionnaireInfo.validatedDescription')}
            </div>
          </div>
        </div>
      </div>

      <!-- Privacy Notice -->
      <div class="alert alert-info">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <div>
          <div class="font-medium">
            {t('questionnaireInfo.privacy.title')}
          </div>
          <div class="text-sm">
            {t('questionnaireInfo.privacy.message')}
          </div>
        </div>
      </div>
    </div>

    <!-- Footer Actions -->
    <div class="modal-action">
      <button class="btn btn-outline" data-modal-close={assessmentId}>
        {t('common.cancel')}
      </button>
      <button class="btn btn-primary" data-start-assessment={assessmentId}>
        {t('questionnaireInfo.startAssessment')}
      </button>
    </div>
  </div>
</div>

<script>
  // Minimal JavaScript for modal functionality
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('[id^="info-btn-"]');
    
    buttons.forEach(button => {
      const assessmentId = button.getAttribute('data-assessment-id');
      const modal = document.getElementById(`modal-${assessmentId}`);
      
      if (!modal) return;
      
      // Open modal
      button.addEventListener('click', () => {
        modal.classList.add('modal-open');
      });
      
      // Close modal
      const closeButtons = modal.querySelectorAll(`[data-modal-close="${assessmentId}"]`);
      closeButtons.forEach(closeBtn => {
        closeBtn.addEventListener('click', () => {
          modal.classList.remove('modal-open');
        });
      });
      
      // Start assessment
      const startBtn = modal.querySelector(`[data-start-assessment="${assessmentId}"]`);
      startBtn?.addEventListener('click', () => {
        modal.classList.remove('modal-open');
        window.location.href = `/assessment/take/${assessmentId}/`;
      });
      
      // Close on backdrop click
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('modal-open');
        }
      });
    });
  });
</script>
