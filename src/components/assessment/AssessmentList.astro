---
// 评测列表组件 - 完全静态版本
import { getSSGAssessmentData } from '@/lib/assessment/SSGAssessmentData';
import { getLocale } from 'astro-i18n-aut';
import { createSSGTranslations } from '@/i18n/utils';
import QuestionnaireInfoButton from './QuestionnaireInfoButton.astro';
import StartAssessmentButton from './StartAssessmentButton.astro';
import type { Language } from '@/shared';

interface Props {
  language?: Language;
}

const { language } = Astro.props;
const currentLang = language || (getLocale(Astro.url) as Language);
const t = createSSGTranslations(currentLang, 'assessment');

// 获取 SSG 数据
const { categories, assessmentsByCategory } = await getSSGAssessmentData(currentLang);
---

<div class="space-y-12">
  {
    categories.map((category) => (
      <section>
        <div class="mb-6">
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">
            {t(`list.categories.${category}`)}
          </h2>
          <p class="text-gray-600 dark:text-gray-300">
            {t(`list.categoryDescriptions.${category}`)}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
          {assessmentsByCategory[category].map((assessment) => (
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600 overflow-hidden min-h-[320px] flex flex-col">
              {/* Category color accent */}
              <div class="h-1.5 w-full bg-blue-500" />

              <div class="p-7 flex-1 flex flex-col">
                {/* Header section with more space */}
                <div class="mb-6">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 leading-tight">
                    {assessment.name}
                  </h3>
                  <p class="text-base text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
                    {assessment.description}
                  </p>

                  {/* Duration badge with better positioning */}
                  <div class="flex justify-start">
                    <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-semibold bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                      {assessment.duration} {t('list.minutes')}
                    </span>
                  </div>
                </div>

                {/* Stats section with improved layout */}
                <div class="mb-6">
                  <div class="flex items-center gap-6 p-4 bg-gray-50 dark:bg-gray-700/30 rounded-xl">
                    <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
                      <svg
                        class="w-5 h-5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span class="font-semibold text-lg">
                        {assessment.questions.length}
                      </span>
                      <span class="text-sm">{t('list.questions')}</span>
                    </div>
                  </div>
                </div>

                {/* Spacer to push button to bottom */}
                <div class="flex-grow" />

                {/* Action buttons */}
                <div class="mt-auto">
                  {/* Info button - Astro component */}
                  <div class="mb-3">
                    <QuestionnaireInfoButton
                      assessmentId={assessment.id}
                      buttonText={t('list.infoButton')}
                      language={currentLang}
                    />
                  </div>

                  {/* Start button - Astro component */}
                  <StartAssessmentButton
                    assessmentId={assessment.id}
                    buttonText={t('list.startButton')}
                    language={currentLang}
                  />
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>
    ))
  }
</div>
