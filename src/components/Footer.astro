---
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v18m9-9a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-xl font-bold">SunRain</span>
        </div>
        <p class="text-gray-300 text-sm leading-relaxed">
          {t('footer.mission')}
        </p>
      </div>

      <!-- Links -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold">{t('nav.resources')}</h3>
        <div class="space-y-2 text-sm">
          <a href="#" class="block text-gray-300 hover:text-white transition-colors">
            {t('nav.guide')}
          </a>
          <a href="#" class="block text-gray-300 hover:text-white transition-colors">
            {t('resources.music')}
          </a>
          <a href="#" class="block text-gray-300 hover:text-white transition-colors">
            {t('resources.books')}
          </a>
        </div>
      </div>

      <!-- Contact -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold">{t('nav.about')}</h3>
        <div class="space-y-2 text-sm text-gray-300">
          <p>Mental Health Support</p>
          <p>Global Community</p>
          <p>24/7 Resources</p>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm text-gray-400">
      <p>{t('footer.copyright')}</p>
    </div>
  </div>
</footer>
