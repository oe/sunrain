---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { languages } from '../i18n/config';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const { title, description, lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const pageTitle = title ? `${title} | SunRain` : `SunRain - ${t('hero.title')}`;
const pageDescription = description || t('meta.description');

// Generate hreflang links
const alternateLinks = Object.keys(languages).map(locale => ({
  lang: locale,
  url: locale === 'en' 
    ? new URL(Astro.url.pathname.replace(/^\/[a-z]{2}/, '') || '/', Astro.site).href
    : new URL(`/${locale}${Astro.url.pathname.replace(/^\/[a-z]{2}/, '')}`, Astro.site).href
}));
---

<!DOCTYPE html>
<html lang={currentLang} dir={currentLang === 'ar' ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={Astro.url.href} />
    
    <!-- Hreflang Links -->
    {alternateLinks.map(({ lang, url }) => (
      <link rel="alternate" hreflang={lang} href={url} />
    ))}
    <link rel="alternate" hreflang="x-default" href={new URL('/', Astro.site).href} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:locale" content={currentLang === 'zh' ? 'zh_CN' : currentLang} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex flex-col">
    <Header lang={currentLang} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={currentLang} />
  </body>
</html>
