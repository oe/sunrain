---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout 
  title={t('nav.about')}
  description={t('about.description')}
  lang={lang}
>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-green-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          {t('about.title')}
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {t('about.subtitle')}
        </p>
      </div>

      <!-- Mission Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('about.mission.title')}
          </h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            {t('about.mission.description')}
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2">{t('about.values.accessible.title')}</h3>
              <p class="text-gray-600">{t('about.values.accessible.description')}</p>
            </div>
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2">{t('about.values.compassionate.title')}</h3>
              <p class="text-gray-600">{t('about.values.compassionate.description')}</p>
            </div>
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2">{t('about.values.evidenceBased.title')}</h3>
              <p class="text-gray-600">{t('about.values.evidenceBased.description')}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Our Approach Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('about.approach.title')}
          </h2>
          <div class="prose prose-lg max-w-none text-gray-600">
            <p>{t('about.approach.paragraph1')}</p>
            <p>{t('about.approach.paragraph2')}</p>
            <p>{t('about.approach.paragraph3')}</p>
          </div>
        </div>
      </section>

      <!-- What We Offer Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('about.offers.title')}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="border-l-4 border-blue-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">{t('about.offers.guides.title')}</h3>
              <p class="text-gray-600">{t('about.offers.guides.description')}</p>
            </div>
            <div class="border-l-4 border-green-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">{t('about.offers.resources.title')}</h3>
              <p class="text-gray-600">{t('about.offers.resources.description')}</p>
            </div>
            <div class="border-l-4 border-purple-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">{t('about.offers.multilingual.title')}</h3>
              <p class="text-gray-600">{t('about.offers.multilingual.description')}</p>
            </div>
            <div class="border-l-4 border-orange-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">{t('about.offers.community.title')}</h3>
              <p class="text-gray-600">{t('about.offers.community.description')}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Important Notice -->
      <section class="mb-16">
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-8">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-yellow-600 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-yellow-800 mb-2">{t('about.disclaimer.title')}</h3>
              <p class="text-yellow-700">{t('about.disclaimer.description')}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Call to Action -->
      <div class="text-center bg-gradient-to-r from-blue-600 to-green-600 text-white rounded-lg p-8">
        <h2 class="text-2xl font-bold mb-4">{t('about.cta.title')}</h2>
        <p class="text-lg mb-6">{t('about.cta.description')}</p>
        <div class="space-x-4">
          <a 
            href={`/${lang}/guide`}
            class="inline-block bg-white text-blue-600 font-semibold px-8 py-3 rounded-lg hover:bg-blue-50 transition-colors"
          >
            {t('about.cta.guides')}
          </a>
          <a 
            href={`/${lang}/resources`}
            class="inline-block bg-transparent border-2 border-white text-white font-semibold px-8 py-3 rounded-lg hover:bg-white hover:text-blue-600 transition-colors"
          >
            {t('about.cta.resources')}
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
