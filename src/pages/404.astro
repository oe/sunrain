---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { t, getLocalizedPath, getLanguageFromPath, type Language } from '@/lib/i18n';
import { Icon } from '@/components/Icon';

const lang = getLanguageFromPath(Astro.url.pathname) as Language;
---

<BaseLayout title={t('errors.notFound.title', lang)}>
  <div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <Icon name="CloudRain" size={80} className="text-gray-400 dark:text-gray-500" client:load />
      </div>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t('errors.notFound.title', lang)}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
        {t('errors.notFound.message', lang)}
      </p>
      <a
        href={getLocalizedPath('/', lang)}
        class="inline-flex items-center px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white font-medium rounded-full transition-colors"
      >
        {t('errors.notFound.backHome', lang)}
      </a>
    </div>
  </div>
</BaseLayout>

