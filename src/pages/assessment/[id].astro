---
import BaseLayout from '@/layouts/BaseLayout.astro';
import {
  t,
  getLocalizedPath,
  getLanguageFromPath,
  SUPPORTED_LANGUAGES,
  type Language
} from '@/lib/i18n';
import { getCollection } from 'astro:content';
import { localizeQuestionnaire } from '@/lib/questionnaire';

export async function getStaticPaths() {
  const questionnaires = await getCollection('questionnaires');
  const languages = SUPPORTED_LANGUAGES;

  return questionnaires.flatMap((q) =>
    languages.map((lang) => ({
      params: { id: q.data.id },
      props: { questionnaire: q.data, lang }
    }))
  );
}

const { questionnaire: rawQuestionnaire, lang: pathLang } = Astro.props;
const lang = (getLanguageFromPath(Astro.url.pathname) || pathLang) as Language;
const questionnaire = localizeQuestionnaire(rawQuestionnaire, lang);
---

<BaseLayout title={questionnaire.title}>
  <div class="container mx-auto px-4 py-12">
    <!-- Assessment Container -->
    <div id="assessment-container" class="max-w-2xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <a
          href={getLocalizedPath('/assessment/', lang)}
          class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white mb-4"
        >
          ← {t('common.back', lang)}
        </a>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
          {questionnaire.title}
        </h1>
        <p class="text-gray-600 dark:text-gray-300">
          {questionnaire.instruction}
        </p>
      </div>

      <!-- Progress Bar -->
      <div class="mb-8">
        <div
          class="flex justify-between text-sm text-gray-500 dark:text-gray-400 mb-2"
        >
          <span>{t('assessment.taking.progress', lang)}</span>
          <span id="progress-text">0 / {questionnaire.questionCount}</span>
        </div>
        <div
          class="h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden"
        >
          <div
            id="progress-bar"
            class="h-full bg-blue-600 transition-all duration-300"
            style="width: 0%"
          >
          </div>
        </div>
      </div>

      <!-- Question Card -->
      <div
        id="question-card"
        class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8 mb-6"
      >
        <p
          id="question-number"
          class="text-sm text-gray-500 dark:text-gray-400 mb-4"
        >
        </p>
        <h2
          id="question-text"
          class="text-xl font-medium text-gray-900 dark:text-white mb-6"
        >
        </h2>
        <div id="options-container" class="space-y-3"></div>
      </div>

      <!-- Navigation -->
      <div class="flex justify-between">
        <button
          id="prev-btn"
          class="px-6 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white disabled:opacity-50 disabled:cursor-not-allowed"
          disabled
        >
          ← {t('assessment.taking.previous', lang)}
        </button>
        <button
          id="next-btn"
          class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl disabled:opacity-50 disabled:cursor-not-allowed"
          disabled
        >
          {t('assessment.taking.next', lang)} →
        </button>
      </div>
    </div>

    <!-- Results Container (hidden initially) -->
    <div
      id="results-container"
      class="hidden max-w-2xl mx-auto animate-fade-in-scale"
    >
      <div
        class="bg-white dark:bg-gray-800 rounded-3xl shadow-xl overflow-hidden"
      >
        <!-- Header with gradient -->
        <div
          class="bg-gradient-to-r from-blue-500 to-indigo-500 px-8 py-6 text-center"
        >
          <h2 class="text-2xl font-bold text-white">
            {t('assessment.results.title', lang)}
          </h2>
        </div>

        <div class="p-8">
          <!-- Circular Score Display -->
          <div class="flex justify-center mb-8">
            <div class="relative w-48 h-48">
              <!-- Background circle -->
              <svg class="absolute inset-0 w-full h-full -rotate-90">
                <circle
                  cx="50%"
                  cy="50%"
                  r="45%"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="8"
                  class="text-gray-200 dark:text-gray-700"></circle>
                <circle
                  id="score-ring"
                  cx="50%"
                  cy="50%"
                  r="45%"
                  fill="none"
                  stroke="url(#score-gradient)"
                  stroke-width="8"
                  stroke-linecap="round"
                  stroke-dasharray="283"
                  stroke-dashoffset="283"
                  class="transition-all duration-1000 ease-out"></circle>
                <defs>
                  <linearGradient
                    id="score-gradient"
                    x1="0%"
                    y1="0%"
                    x2="100%"
                    y2="0%"
                  >
                    <stop id="grad-stop-1" offset="0%" stop-color="#22c55e"
                    ></stop>
                    <stop id="grad-stop-2" offset="100%" stop-color="#16a34a"
                    ></stop>
                  </linearGradient>
                </defs>
              </svg>

              <!-- Score in center -->
              <div
                class="absolute inset-0 flex flex-col items-center justify-center"
              >
                <span
                  id="score-value"
                  class="text-5xl font-bold text-gray-900 dark:text-white"
                ></span>
                <span class="text-sm text-gray-500 dark:text-gray-400"
                  >{t('assessment.results.score', lang)}</span
                >
              </div>
            </div>
          </div>

          <!-- Level badge -->
          <div class="text-center mb-8">
            <span
              id="result-level"
              class="inline-block px-6 py-2.5 rounded-full text-lg font-semibold shadow-md"
            ></span>
          </div>

          <!-- Suggestion card -->
          <div
            class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-700/50 dark:to-gray-800/50 rounded-2xl p-6 mb-6"
          >
            <h3
              class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2"
            >
              <svg
                class="w-5 h-5 text-blue-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              {t('assessment.results.suggestion', lang)}
            </h3>
            <p
              id="result-suggestion"
              class="text-gray-600 dark:text-gray-300 leading-relaxed"
            >
            </p>
          </div>

          <!-- Disclaimer -->
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-8 text-center">
            {questionnaire.disclaimer}
          </p>

          <!-- Action buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button
              id="retake-btn"
              class="group px-6 py-3.5 bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white font-semibold rounded-2xl shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5 flex items-center justify-center gap-2"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                ></path>
              </svg>
              {t('assessment.results.retake', lang)}
            </button>
            <a
              href={getLocalizedPath('/assessment/', lang)}
              class="px-6 py-3.5 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 font-semibold rounded-2xl shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-600 transition-all hover:-translate-y-0.5 flex items-center justify-center gap-2"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                ></path>
              </svg>
              {t('assessment.results.viewHistory', lang)}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script is:inline define:vars={{ questionnaire, lang }}>
  // State
  let currentIndex = 0;
  const answers = new Array(questionnaire.questions.length).fill(null);

  // Elements
  const assessmentContainer = document.getElementById('assessment-container');
  const resultsContainer = document.getElementById('results-container');
  const questionNumber = document.getElementById('question-number');
  const questionText = document.getElementById('question-text');
  const optionsContainer = document.getElementById('options-container');
  const progressBar = document.getElementById('progress-bar');
  const progressText = document.getElementById('progress-text');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const retakeBtn = document.getElementById('retake-btn');

  function renderQuestion() {
    const q = questionnaire.questions[currentIndex];
    const isLast = currentIndex === questionnaire.questions.length - 1;

    // Update question
    if (questionNumber)
      questionNumber.textContent = `Question ${currentIndex + 1} of ${questionnaire.questions.length}`;
    if (questionText) questionText.textContent = q.text;

    // Update options
    if (optionsContainer) {
      optionsContainer.innerHTML = questionnaire.options
        .map(function (opt, idx) {
          return (
            '<label class="flex items-center gap-4 p-4 rounded-xl border-2 cursor-pointer transition-all ' +
            (answers[currentIndex] === opt.value
              ? 'border-blue-500 bg-blue-50 dark:bg-blue-900/20'
              : 'border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600') +
            '">' +
            '<input type="radio" name="answer" value="' +
            opt.value +
            '" ' +
            (answers[currentIndex] === opt.value ? 'checked' : '') +
            ' class="w-5 h-5 text-blue-600">' +
            '<span class="text-gray-900 dark:text-white">' +
            opt.label +
            '</span>' +
            '</label>'
          );
        })
        .join('');

      // Add event listeners
      optionsContainer
        .querySelectorAll('input[type="radio"]')
        .forEach(function (input) {
          input.addEventListener('change', function (e) {
            answers[currentIndex] = parseInt(e.target.value);
            renderQuestion();
            updateProgress();
          });
        });
    }

    // Update progress
    updateProgress();

    // Update buttons
    if (prevBtn) prevBtn.disabled = currentIndex === 0;
    if (nextBtn) {
      nextBtn.disabled = answers[currentIndex] === null;
      nextBtn.textContent = isLast ? 'Submit' : 'Next →';
    }
  }

  function updateProgress() {
    const answered = answers.filter((a) => a !== null).length;
    const percent = (answered / questionnaire.questions.length) * 100;
    if (progressBar) progressBar.style.width = `${percent}%`;
    if (progressText)
      progressText.textContent = `${answered} / ${questionnaire.questions.length}`;
  }

  function showResults() {
    const score = answers.reduce((sum, val) => sum + (val || 0), 0);
    const interpretation =
      questionnaire.interpretations.find(
        (i) => score >= i.range[0] && score <= i.range[1]
      ) ||
      questionnaire.interpretations[questionnaire.interpretations.length - 1];

    // Save result
    const result = {
      id: `result_${Date.now()}`,
      questionnaireId: questionnaire.id,
      questionnaireTitle: questionnaire.title,
      answers,
      score,
      level: interpretation.level,
      label: interpretation.label,
      color: interpretation.color,
      suggestion: interpretation.suggestion,
      completedAt: new Date().toISOString(),
      language: lang
    };

    // Save to localStorage
    try {
      const existing = JSON.parse(
        localStorage.getItem('sunrain_assessment_results') || '[]'
      );
      existing.unshift(result);
      localStorage.setItem(
        'sunrain_assessment_results',
        JSON.stringify(existing)
      );
    } catch (e) {
      console.error('Failed to save result:', e);
    }

    // Show results
    assessmentContainer?.classList.add('hidden');
    resultsContainer?.classList.remove('hidden');

    const scoreValue = document.getElementById('score-value');
    const resultLevel = document.getElementById('result-level');
    const resultSuggestion = document.getElementById('result-suggestion');

    if (scoreValue) {
      scoreValue.textContent = String(score);
      scoreValue.style.color = interpretation.color;
    }
    if (resultLevel) {
      resultLevel.textContent = interpretation.label;
      resultLevel.style.backgroundColor = `${interpretation.color}20`;
      resultLevel.style.color = interpretation.color;
    }
    if (resultSuggestion) {
      resultSuggestion.textContent = interpretation.suggestion;
    }

    // Animate circular progress
    const scoreRing = document.getElementById('score-ring');
    const gradStop1 = document.getElementById('grad-stop-1');
    const gradStop2 = document.getElementById('grad-stop-2');

    if (scoreRing) {
      // Calculate progress (score / maxScore)
      const maxScore =
        questionnaire.interpretations[questionnaire.interpretations.length - 1]
          .range[1];
      const progress = Math.min(score / maxScore, 1);
      const circumference = 283; // Same as stroke-dasharray
      const offset = circumference - progress * circumference;

      // Set gradient colors based on interpretation
      if (gradStop1 && gradStop2) {
        gradStop1.setAttribute('stop-color', interpretation.color);
        gradStop2.setAttribute('stop-color', interpretation.color);
      }

      // Animate after a short delay
      setTimeout(() => {
        scoreRing.style.strokeDashoffset = String(offset);
      }, 100);
    }
  }

  // Event listeners
  prevBtn?.addEventListener('click', () => {
    if (currentIndex > 0) {
      currentIndex--;
      renderQuestion();
    }
  });

  nextBtn?.addEventListener('click', () => {
    if (currentIndex < questionnaire.questions.length - 1) {
      currentIndex++;
      renderQuestion();
    } else {
      showResults();
    }
  });

  retakeBtn?.addEventListener('click', () => {
    currentIndex = 0;
    answers.fill(null);
    assessmentContainer?.classList.remove('hidden');
    resultsContainer?.classList.add('hidden');
    renderQuestion();
  });

  // Initial render
  renderQuestion();
</script>
