---
// Continue incomplete assessments page
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocale } from 'astro-i18n-aut';
import { createSSGTranslations } from '@/i18n/utils';
import ContinueAssessmentPage from '@/components/assessment/ContinueAssessmentPage';
import type { Language } from '@/shared';

const currentLang = getLocale(Astro.url) as Language;
// 使用新的SSG翻译系统，不使用React hooks
const t = createSSGTranslations(currentLang, 'assessment');
---

<BaseLayout title={t('continue.title')}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
          {t('continue.title')}
        </h1>
        <p class="text-gray-600 dark:text-gray-300">
          {t('continue.subtitle')}
        </p>
      </div>

      <!-- Use the new React ContinueAssessmentPage component with client:only directive -->
      <ContinueAssessmentPage client:only="react" />
    </div>
  </main>


</BaseLayout>
