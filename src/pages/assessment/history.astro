---
// Assessment history and trend visualization interface
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocale } from 'astro-i18n-aut';
import { getAssessmentTranslations } from '@/locales/assessment';
import AssessmentHistoryClient from '@/components/assessment/AssessmentHistoryClient';
import type { Language } from '@/shared';

const currentLang = getLocale(Astro.url) as Language;
const t = getAssessmentTranslations(currentLang);
---

<BaseLayout title={t.history.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{t.history.title}</h1>
          <p class="text-gray-600 dark:text-gray-300">{t.history.subtitle}</p>
        </div>
        <div class="flex space-x-3">
          <button id="export-btn" class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            {t.history.actions.export}
          </button>
          <a href="/assessment/" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
            {t.history.actions.newAssessment}
          </a>
        </div>
      </div>

      <!-- Statistics Overview -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 dark:bg-blue-900 rounded-lg">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">{t.history.statistics.total}</p>
              <p id="total-assessments" class="text-2xl font-semibold text-gray-900 dark:text-white">0</p>
            </div>
          </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 dark:bg-green-900 rounded-lg">
              <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">{t.history.statistics.completed}</p>
              <p id="completed-assessments" class="text-2xl font-semibold text-gray-900 dark:text-white">0</p>
            </div>
          </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center">
            <div class="p-2 bg-yellow-100 dark:bg-yellow-900 rounded-lg">
              <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">{t.history.statistics.averageTime}</p>
              <p id="average-time" class="text-2xl font-semibold text-gray-900 dark:text-white">0{t.common.timeUnits.minutes}</p>
            </div>
          </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 dark:bg-purple-900 rounded-lg">
              <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 001.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">{t.history.statistics.lastAssessment}</p>
              <p id="last-assessment" class="text-2xl font-semibold text-gray-900 dark:text-white">-</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Filters and Search -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6 mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
          <div class="flex flex-col md:flex-row md:items-center space-y-4 md:space-y-0 md:space-x-4">
            <div>
              <label for="assessment-type-filter" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                {t.history.filters.assessmentType}
              </label>
              <select id="assessment-type-filter" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                <option value="">{t.history.filters.allTypes}</option>
                <option value="mental_health">{t.list.categories.mental_health}</option>
                <option value="personality">{t.list.categories.personality}</option>
                <option value="stress">{t.list.categories.stress}</option>
                <option value="mood">{t.list.categories.mood}</option>
              </select>
            </div>

            <div>
              <label for="time-range-filter" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                {t.history.filters.timeRange}
              </label>
              <select id="time-range-filter" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                <option value="">{t.history.filters.allTimes}</option>
                <option value="7">{t.history.filters.last7Days}</option>
                <option value="30">{t.history.filters.last30Days}</option>
                <option value="90">{t.history.filters.last3Months}</option>
                <option value="365">{t.history.filters.lastYear}</option>
              </select>
            </div>

            <div>
              <label for="risk-level-filter" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                {t.history.filters.riskLevel}
              </label>
              <select id="risk-level-filter" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                <option value="">{t.history.filters.allLevels}</option>
                <option value="low">{t.common.riskLevels.low}</option>
                <option value="medium">{t.common.riskLevels.medium}</option>
                <option value="high">{t.common.riskLevels.high}</option>
              </select>
            </div>
          </div>

          <button id="clear-filters-btn" class="px-4 py-2 text-sm text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">
            {t.history.filters.clearFilters}
          </button>
        </div>
      </div>

      <!-- Assessment History List -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">{t.history.list.title}</h2>
        </div>

        <!-- Loading State -->
        <div id="history-loading" class="p-8 text-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"></div>
          <p class="text-gray-600 dark:text-gray-300">{t.common.loading}</p>
        </div>

        <!-- Empty State -->
        <div id="history-empty" class="hidden p-8 text-center">
          <svg class="w-12 h-12 text-gray-400 dark:text-gray-600 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">{t.history.empty.title}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">{t.history.empty.message}</p>
          <a href="/assessment/" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
            {t.history.empty.startFirst}
            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>

        <!-- History List -->
        <div id="history-list" class="hidden">
          <!-- History items will be dynamically inserted here -->
        </div>

        <!-- Pagination -->
        <div id="pagination" class="hidden px-6 py-4 border-t border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-700 dark:text-gray-300">
              {t.history.pagination.showing} <span id="page-start">1</span> {t.history.pagination.to} <span id="page-end">10</span> {t.history.pagination.of} <span id="total-results">0</span> {t.history.pagination.records}
            </div>
            <div class="flex space-x-2">
              <button id="prev-page-btn" class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                {t.history.pagination.previous}
              </button>
              <button id="next-page-btn" class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                {t.history.pagination.next}
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Client-side functionality -->
  <AssessmentHistoryClient client:only="react" />
</BaseLayout>
