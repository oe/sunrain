---
import { getLocale } from 'astro-i18n-aut';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { type Language, getRelativeLocaleUrl } from '@/shared';
import { createSSGTranslations } from '@/i18n/utils';
import { practiceLoader } from '@/data/practices/PracticeLoader';

const lang = getLocale(Astro.url) as Language;
const t = createSSGTranslations(lang, 'practice');

// ç›´æ¥ä½¿ç”¨æ•°æ®åŠ è½½å™¨ï¼Œæ— éœ€å¤æ‚è½¬æ¢
const practices = practiceLoader.getSimplePractices(lang);
---

<BaseLayout
  title={t('title')}
  description={t('meta.description')}
  lang={lang}
>
  <div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-base-content mb-4">
        {t('title')}
      </h1>
      <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
        {t('description')}
      </p>
    </div>

    <!-- Practice Grid -->
    <div class="mb-8">
      {practices.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {practices.map((practice) => (
            <a
              href={getRelativeLocaleUrl(lang, `/practice/${practice.id}/`)}
              class="card bg-base-100 shadow-xl transition-all duration-300 hover:shadow-2xl hover:scale-105 block"
              aria-label={`${t('startPractice')}: ${practice.name}`}
            >
              <div class="card-body">
                <div class="flex items-center justify-between mb-2">
                  <span class="badge badge-primary badge-sm">{practice.difficulty}</span>
                  <span class="text-sm text-base-content/60">{practice.defaultDuration} {t('minutes')}</span>
                </div>

                <h2 class="card-title text-lg mb-2">{practice.name}</h2>
                <p class="text-base-content/70 text-sm mb-4 line-clamp-2">
                  {practice.description}
                </p>

                <div class="flex flex-wrap gap-1 mb-4">
                  {practice.tags.slice(0, 3).map((tag) => (
                    <span class="badge badge-outline badge-sm text-xs">{tag}</span>
                  ))}
                </div>

                <div class="card-actions justify-end">
                  <div class="btn btn-primary btn-sm w-full relative">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h1m4 0h1m-6-8h8a2 2 0 012 2v8a2 2 0 01-2 2H8a2 2 0 01-2-2v-8a2 2 0 012-2z"></path>
                    </svg>
                    {t('startPractice')}
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <div class="text-6xl mb-4">ğŸ”</div>
          <h3 class="text-xl font-semibold text-base-content mb-2">
            {t('noHistoryTitle')}
          </h3>
          <p class="text-base-content/70">
            {t('noHistoryDescription')}
          </p>
        </div>
      )}
    </div>

    <!-- Quick Actions -->
    <div class="text-center">
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={getRelativeLocaleUrl(lang, '/practice/history/')}
          class="btn btn-outline"
        >
          ğŸ“Š {t('viewHistory')}
        </a>
        <a
          href={practices.length > 0 ? getRelativeLocaleUrl(lang, `/practice/${practices[0].id}/`) : '#'}
          class="btn btn-primary"
          class:btn-disabled={practices.length === 0}
        >
          ğŸš€ {t('quickStart')}
        </a>
      </div>
    </div>
  </div>
</BaseLayout>