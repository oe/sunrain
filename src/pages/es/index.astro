---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout 
  title={t('hero.title')}
  description={t('meta.description')}
  lang={lang}
>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-green-50 flex items-center justify-center py-12">
    <div class="max-w-2xl mx-auto text-center px-4">
      <div class="bg-white rounded-lg shadow-md p-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          {t('coming.soon')}
        </h1>
        <h2 class="text-2xl font-semibold text-gray-700 mb-6">
          Contenido en Español
        </h2>
        <p class="text-gray-600 mb-8">
          Estamos trabajando para traerte recursos de salud mental en español. 
          Mientras tanto, puedes acceder al contenido en inglés o chino.
        </p>
        
        <div class="space-y-4">
          <a 
            href="/en"
            class="inline-block w-full bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors"
          >
            English Content
          </a>
          <a 
            href="/zh"
            class="inline-block w-full bg-gray-100 text-gray-700 font-medium px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors"
          >
            中文内容
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
