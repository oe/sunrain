---
import { getCollection } from 'astro:content';
import { getLocale } from 'astro-i18n-aut';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { type Language, getRelativeLocaleUrl } from '@/shared';
import { createSSGTranslations } from '@/i18n/utils';

const lang = getLocale(Astro.url) as Language;

const t = createSSGTranslations(lang, 'guide');

// Get all English guides
const allGuides = await getCollection('guide', ({ id }) =>
  id.startsWith('en/')
);
const sortedGuides = allGuides.sort(
  (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

const featuredGuides = sortedGuides.filter((guide) => guide.data.featured);
const regularGuides = sortedGuides.filter((guide) => !guide.data.featured);
---

<BaseLayout
  title={t('page.title')}
  description={t('page.subtitle')}
  lang={lang}
>
  <div
    class="min-h-screen bg-gradient-to-br from-blue-50 to-green-50 dark:from-gray-900 dark:to-gray-800"
  >
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol
          class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400"
        >
          <li>
            <a
              href={getRelativeLocaleUrl(lang)}
              class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
              {t('nav.home')}
            </a>
          </li>
          <li>
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </li>
          <li class="text-gray-900 dark:text-white font-medium">
            {t('page.title')}
          </li>
        </ol>
      </nav>

      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1
          class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4"
        >
          {t('page.title')}
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {t('page.subtitle')}
        </p>
      </div>

      <!-- Featured Guides -->
      {
        featuredGuides.length > 0 && (
          <section class="mb-16">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
              {t('list.featured')}
            </h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {featuredGuides.map((guide) => (
                <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-200 dark:border-gray-700 overflow-hidden">
                  <div class="p-6">
                    <div class="flex items-center mb-3">
                      <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-xs font-medium rounded-full">
                        {t('list.featuredTag')}
                      </span>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
                      <a
                        href={getRelativeLocaleUrl(
                          lang,
                          `/guide/${guide.slug.replace('en/', '')}/`
                        )}
                        class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                      >
                        {guide.data.title}
                      </a>
                    </h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">
                      {guide.data.description}
                    </p>

                    {guide.data.tags && guide.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-2 mb-4">
                        {guide.data.tags.slice(0, 3).map((tag) => (
                          <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}

                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-500 dark:text-gray-400">
                        {guide.data.publishDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </span>
                      <a
                        href={getRelativeLocaleUrl(
                          lang,
                          `/guide/${guide.slug.replace('en/', '')}/`
                        )}
                        class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium transition-colors"
                      >
                        {t('actions.readMore')} →
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </section>
        )
      }

      <!-- All Guides -->
      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
          {t('list.allGuides')}
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            regularGuides.map((guide) => (
              <article class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow border border-gray-200 dark:border-gray-700 overflow-hidden">
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
                    <a
                      href={getRelativeLocaleUrl(
                        lang,
                        `/guide/${guide.slug.replace('en/', '')}/`
                      )}
                      class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                    >
                      {guide.data.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 mb-4 text-sm">
                    {guide.data.description}
                  </p>

                  {guide.data.tags && guide.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {guide.data.tags.slice(0, 2).map((tag) => (
                        <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}

                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                      {guide.data.publishDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </span>
                    <a
                      href={getRelativeLocaleUrl(
                        lang,
                        `/guide/${guide.slug.replace('en/', '')}/`
                      )}
                      class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium transition-colors text-sm"
                    >
                      {t('actions.readMore')} →
                    </a>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </section>

      <!-- Empty State -->
      {
        allGuides.length === 0 && (
          <div class="text-center py-12">
            <div class="mx-auto w-24 h-24 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mb-6">
              <svg
                class="w-12 h-12 text-gray-400 dark:text-gray-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
              {t('empty.noGuidesAvailable')}
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              {t('empty.emptyDescription')}
            </p>
          </div>
        )
      }

      <!-- Call to Action -->
      <section
        class="mt-16 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-8 text-center border border-blue-100 dark:border-blue-800"
      >
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          {t('help.needMoreHelp')}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
          {t('help.helpDescription')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={getRelativeLocaleUrl(lang, '/resources/')}
            class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
          >
            {t('help.exploreResources')}
          </a>
          <a
            href={getRelativeLocaleUrl(lang, '/about/')}
            class="inline-flex items-center justify-center px-6 py-3 border border-blue-600 dark:border-blue-400 text-blue-600 dark:text-blue-400 font-medium rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/30 transition-colors"
          >
            {t('help.getEmergencyHelp')}
          </a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
