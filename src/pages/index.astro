---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { t, getLocalizedPath, getLanguageFromPath, type Language } from '@/lib/i18n';
import { Icon } from '@/components/Icon';

const lang = getLanguageFromPath(Astro.url.pathname) as Language;
---

<BaseLayout title={t('home.hero.title', lang)}>
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] bg-gradient-to-br from-amber-50 via-orange-50 to-rose-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 flex items-center">
    <!-- Decorative elements -->
    <div class="absolute inset-0 overflow-hidden opacity-20 dark:opacity-10">
      <div class="absolute top-20 left-10 w-32 h-32 bg-yellow-300 rounded-full blur-3xl"></div>
      <div class="absolute top-40 right-20 w-24 h-24 bg-rose-300 rounded-full blur-2xl"></div>
      <div class="absolute bottom-20 left-1/3 w-40 h-40 bg-orange-300 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 py-16 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Logo -->
        <div class="mb-6 flex justify-center">
          <img src="/logo.png" alt="Sunrain" class="w-18 h-18" />
        </div>
        
        <!-- Tagline -->
        <p class="text-lg text-amber-600 dark:text-amber-400 font-medium mb-4">
          {t('site.tagline', lang)}
        </p>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
          {t('home.hero.title', lang)}
        </h1>

        <!-- Description -->
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          {t('home.hero.subtitle', lang)}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={getLocalizedPath('/assessment/', lang)}
            class="inline-flex items-center justify-center px-8 py-3 bg-amber-500 hover:bg-amber-600 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all"
          >
            {t('home.hero.startAssessment', lang)}
          </a>
          <a
            href={getLocalizedPath('/breathing/', lang)}
            class="inline-flex items-center justify-center px-8 py-3 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 font-semibold rounded-full shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-700 transition-all"
          >
            {t('home.hero.tryBreathing', lang)}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Assessment Card -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl p-8 border border-blue-100 dark:border-blue-800/30 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <Icon name="ClipboardList" size={40} className="text-blue-600 dark:text-blue-400"  />
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
            {t('home.features.assessment.title', lang)}
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            {t('home.features.assessment.description', lang)}
          </p>
          <a
            href={getLocalizedPath('/assessment/', lang)}
            class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium hover:underline"
          >
            {t('home.features.assessment.button', lang)}
          </a>
        </div>

        <!-- Breathing Card -->
        <div class="bg-gradient-to-br from-green-50 to-teal-50 dark:from-green-900/20 dark:to-teal-900/20 rounded-2xl p-8 border border-green-100 dark:border-green-800/30 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <Icon name="Wind" size={40} className="text-green-600 dark:text-green-400"  />
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
            {t('home.features.breathing.title', lang)}
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            {t('home.features.breathing.description', lang)}
          </p>
          <a
            href={getLocalizedPath('/breathing/', lang)}
            class="inline-flex items-center text-green-600 dark:text-green-400 font-medium hover:underline"
          >
            {t('home.features.breathing.button', lang)}
          </a>
        </div>

        <!-- Crisis Card -->
        <div class="bg-gradient-to-br from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20 rounded-2xl p-8 border border-red-100 dark:border-red-800/30 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <Icon name="Phone" size={40} className="text-red-600 dark:text-red-400"  />
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
            {t('home.features.crisis.title', lang)}
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            {t('home.features.crisis.description', lang)}
          </p>
          <a
            href={getLocalizedPath('/crisis/', lang)}
            class="inline-flex items-center text-red-600 dark:text-red-400 font-medium hover:underline"
          >
            {t('home.features.crisis.button', lang)}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

