---
import BaseLayout from '@/layouts/BaseLayout.astro';
import {
  t,
  getLocalizedPath,
  getLanguageFromPath,
  type Language
} from '@/lib/i18n';
import { Icon } from '@/components/Icon';

const lang = getLanguageFromPath(Astro.url.pathname) as Language;
---

<BaseLayout title={t('home.hero.title', lang)}>
  <!-- Hero Section -->
  <section
    class="relative min-h-[90vh] bg-gradient-to-br from-amber-50 via-orange-50 to-rose-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 flex items-center overflow-hidden"
  >
    <!-- Animated Decorative Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Floating orbs with animation -->
      <div
        class="decorative-blur w-72 h-72 bg-yellow-300 top-10 left-10 animate-float"
      >
      </div>
      <div
        class="decorative-blur w-48 h-48 bg-rose-300 top-32 right-16 animate-float delay-300"
        style="animation-delay: 1s;"
      >
      </div>
      <div
        class="decorative-blur w-64 h-64 bg-orange-300 bottom-20 left-1/4 animate-float"
        style="animation-delay: 2s;"
      >
      </div>
      <div
        class="decorative-blur w-40 h-40 bg-blue-300 bottom-32 right-1/4 animate-float delay-500"
        style="animation-delay: 0.5s;"
      >
      </div>

      <!-- Subtle grid pattern -->
      <div
        class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-[0.03] dark:opacity-[0.02]"
      >
      </div>
    </div>

    <div class="container mx-auto px-4 py-16 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Logo with entrance animation -->
        <div class="mb-8 flex justify-center animate-fade-in-down">
          <div class="relative group">
            <div
              class="absolute -inset-4 bg-gradient-to-r from-amber-400 to-rose-400 rounded-full blur-xl opacity-20 dark:opacity-40 group-hover:opacity-30 dark:group-hover:opacity-50 transition-opacity duration-500"
            >
            </div>
            <picture>
              <source srcset="/logo.avif" type="image/avif" />
              <img
                src="/logo.png"
                alt="Sunrain"
                class="relative w-24 h-24 drop-shadow-lg animate-float"
                style="animation-delay: 0.5s;"
              />
            </picture>
          </div>
        </div>

        <!-- Tagline -->
        <p
          class="text-lg text-amber-600 dark:text-amber-400 font-medium mb-4 animate-fade-in-up delay-100"
        >
          {t('site.tagline', lang)}
        </p>

        <!-- Title with gradient text -->
        <h1
          class="text-5xl md:text-6xl font-bold mb-6 leading-tight animate-fade-in-up delay-200"
        >
          <span
            class="bg-gradient-to-r from-gray-900 via-gray-800 to-gray-700 dark:from-white dark:via-gray-100 dark:to-gray-200 bg-clip-text text-transparent"
          >
            {t('home.hero.title', lang)}
          </span>
        </h1>

        <!-- Description -->
        <p
          class="text-xl text-gray-600 dark:text-gray-300 mb-10 max-w-2xl mx-auto animate-fade-in-up delay-300"
        >
          {t('home.hero.subtitle', lang)}
        </p>

        <!-- CTA Buttons with enhanced styling -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up delay-400"
        >
          <a
            href={getLocalizedPath('/assessment/', lang)}
            class="group relative inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white font-semibold rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden"
          >
            <span
              class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 -translate-x-full group-hover:translate-x-full transition-transform duration-700"
            ></span>
            <span class="relative flex items-center gap-2">
              <Icon name="ClipboardList" size={20} />
              {t('home.hero.startAssessment', lang)}
            </span>
          </a>
          <a
            href={getLocalizedPath('/breathing/', lang)}
            class="group inline-flex items-center justify-center px-8 py-4 bg-white/80 dark:bg-white/10 backdrop-blur-sm text-gray-700 dark:text-white font-semibold rounded-2xl shadow-md hover:shadow-lg border border-gray-200/50 dark:border-white/10 transition-all duration-300 hover:-translate-y-1"
          >
            <span class="flex items-center gap-2">
              <Icon
                name="Wind"
                size={20}
                className="text-teal-500 dark:text-teal-400"
              />
              {t('home.hero.tryBreathing', lang)}
            </span>
          </a>
        </div>

        <!-- Scroll indicator - positioned below buttons -->
        <div class="mt-16 animate-fade-in-up delay-700">
          <div
            class="flex flex-col items-center gap-2 text-gray-400 dark:text-gray-500"
          >
            <span class="text-sm"
              >{t('home.hero.scrollHint', lang) || 'Explore'}</span
            >
            <div
              class="w-6 h-10 rounded-full border-2 border-gray-300 dark:border-gray-600 flex justify-center pt-2"
            >
              <div
                class="w-1.5 h-1.5 rounded-full bg-gray-400 dark:bg-gray-500 animate-bounce"
              >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-white dark:bg-gray-900 relative">
    <!-- Section title -->
    <div class="container mx-auto px-4 mb-16">
      <div class="text-center">
        <h2
          class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
        >
          {t('home.features.sectionTitle', lang) || 'Core Features'}
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          {
            t('home.features.sectionSubtitle', lang) ||
              'Tools designed to support your mental wellness journey'
          }
        </p>
      </div>
    </div>

    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Assessment Card -->
        <div
          class="group relative bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-3xl p-8 border border-blue-100/50 dark:border-blue-800/30 hover-lift overflow-hidden"
        >
          <!-- Decorative gradient -->
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-blue-400/20 to-transparent rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"
          >
          </div>

          <div class="relative">
            <div
              class="mb-6 w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center shadow-lg shadow-blue-500/25 group-hover:scale-110 transition-transform duration-300"
            >
              <Icon name="ClipboardList" size={28} className="text-white" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
              {t('home.features.assessment.title', lang)}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
              {t('home.features.assessment.description', lang)}
            </p>
            <a
              href={getLocalizedPath('/assessment/', lang)}
              class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 font-semibold group-hover:gap-3 transition-all duration-300"
            >
              {t('home.features.assessment.button', lang)}
              <Icon name="ArrowRight" size={18} />
            </a>
          </div>
        </div>

        <!-- Breathing Card -->
        <div
          class="group relative bg-gradient-to-br from-teal-50 to-cyan-50 dark:from-teal-900/20 dark:to-cyan-900/20 rounded-3xl p-8 border border-teal-100/50 dark:border-teal-800/30 hover-lift overflow-hidden md:translate-y-8"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-teal-400/20 to-transparent rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"
          >
          </div>

          <div class="relative">
            <div
              class="mb-6 w-16 h-16 rounded-2xl bg-gradient-to-br from-teal-500 to-cyan-500 flex items-center justify-center shadow-lg shadow-teal-500/25 group-hover:scale-110 transition-transform duration-300"
            >
              <Icon name="Wind" size={28} className="text-white" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
              {t('home.features.breathing.title', lang)}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
              {t('home.features.breathing.description', lang)}
            </p>
            <a
              href={getLocalizedPath('/breathing/', lang)}
              class="inline-flex items-center gap-2 text-teal-600 dark:text-teal-400 font-semibold group-hover:gap-3 transition-all duration-300"
            >
              {t('home.features.breathing.button', lang)}
              <Icon name="ArrowRight" size={18} />
            </a>
          </div>
        </div>

        <!-- Crisis Card -->
        <div
          class="group relative bg-gradient-to-br from-rose-50 to-pink-50 dark:from-rose-900/20 dark:to-pink-900/20 rounded-3xl p-8 border border-rose-100/50 dark:border-rose-800/30 hover-lift overflow-hidden"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-rose-400/20 to-transparent rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"
          >
          </div>

          <div class="relative">
            <div
              class="mb-6 w-16 h-16 rounded-2xl bg-gradient-to-br from-rose-500 to-pink-500 flex items-center justify-center shadow-lg shadow-rose-500/25 group-hover:scale-110 transition-transform duration-300"
            >
              <Icon name="Phone" size={28} className="text-white" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
              {t('home.features.crisis.title', lang)}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
              {t('home.features.crisis.description', lang)}
            </p>
            <a
              href={getLocalizedPath('/crisis/', lang)}
              class="inline-flex items-center gap-2 text-rose-600 dark:text-rose-400 font-semibold group-hover:gap-3 transition-all duration-300"
            >
              {t('home.features.crisis.button', lang)}
              <Icon name="ArrowRight" size={18} />
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Privacy Banner -->
  <section
    class="py-16 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900"
  >
    <div class="container mx-auto px-4">
      <div
        class="max-w-4xl mx-auto flex flex-col md:flex-row items-center gap-8 text-center md:text-left"
      >
        <div
          class="w-20 h-20 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center shadow-lg shadow-emerald-500/25 flex-shrink-0"
        >
          <Icon name="Shield" size={36} className="text-white" />
        </div>
        <div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            {t('home.privacy.title', lang) || 'Your Privacy, Protected'}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {
              t('home.privacy.description', lang) ||
                'All your data stays on your device. No tracking, no cookies, no servers. Your mental health journey is yours alone.'
            }
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
