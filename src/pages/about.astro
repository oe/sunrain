---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { t, getLanguageFromPath, type Language } from '@/lib/i18n';
import { Icon } from '@/components/Icon';

const lang = getLanguageFromPath(Astro.url.pathname) as Language;
---

<BaseLayout title={t('about.title', lang)}>
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="flex justify-center mb-4">
          <Icon name="CloudSun" size={64} className="text-amber-500" client:load />
        </div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {t('about.title', lang)}
        </h1>
      </div>

      <!-- Mission -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          {t('about.mission.title', lang)}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 text-lg leading-relaxed">
          {t('about.mission.description', lang)}
        </p>
      </section>

      <!-- Values -->
      <section class="mb-12">
        <div class="grid md:grid-cols-3 gap-6">
          <!-- Privacy -->
          <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-6">
            <div class="mb-3">
              <Icon name="Lock" size={32} className="text-blue-600 dark:text-blue-400" client:load />
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">
              {t('about.values.privacy.title', lang)}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              {t('about.values.privacy.description', lang)}
            </p>
          </div>

          <!-- Accessibility -->
          <div class="bg-green-50 dark:bg-green-900/20 rounded-xl p-6">
            <div class="mb-3">
              <Icon name="Globe" size={32} className="text-green-600 dark:text-green-400" client:load />
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">
              {t('about.values.accessibility.title', lang)}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              {t('about.values.accessibility.description', lang)}
            </p>
          </div>

          <!-- Evidence -->
          <div class="bg-purple-50 dark:bg-purple-900/20 rounded-xl p-6">
            <div class="mb-3">
              <Icon name="BarChart3" size={32} className="text-purple-600 dark:text-purple-400" client:load />
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">
              {t('about.values.evidence.title', lang)}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              {t('about.values.evidence.description', lang)}
            </p>
          </div>
        </div>
      </section>

      <!-- Disclaimer -->
      <section class="mb-12 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800/30 rounded-xl p-6">
        <h3 class="flex items-center gap-2 font-bold text-amber-800 dark:text-amber-300 mb-2">
          <Icon name="AlertTriangle" size={20} client:load />
          {t('about.disclaimer.title', lang)}
        </h3>
        <p class="text-amber-700 dark:text-amber-400">
          {t('about.disclaimer.message', lang)}
        </p>
      </section>

      <!-- Open Source -->
      <section class="text-center">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          {t('about.opensource.title', lang)}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          {t('about.opensource.description', lang)}
        </p>
        <a
          href="https://github.com/oe/sunrain"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium rounded-full hover:opacity-90 transition-opacity"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          {t('about.opensource.github', lang)}
        </a>
      </section>
    </div>
  </div>
</BaseLayout>

