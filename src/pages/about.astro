---
import { getLocale } from 'astro-i18n-aut';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { type Language } from '@/i18n/config';
import { useAboutTranslations, getRelativeLocaleUrl } from '@/i18n/utils';

const lang = getLocale(Astro.url) as Language;
const t = useAboutTranslations(lang);
---

<BaseLayout
  title={t('page.title')}
  description={t('page.description')}
  lang={lang}
>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-green-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li>
            <a
              href={getRelativeLocaleUrl(lang)}
              class="hover:text-blue-600 transition-colors"
            >
              {t('nav.home')}
            </a>
          </li>
          <li>
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              ></path>
            </svg>
          </li>
          <li class="text-gray-900 font-medium">{t('page.title')}</li>
        </ol>
      </nav>

      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          {t('page.title')}
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {t('page.subtitle')}
        </p>
      </div>

      <!-- Mission Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('mission.title')}
          </h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            {t('mission.description')}
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
            <div class="text-center p-6">
              <div
                class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4"
              >
                <svg
                  class="w-8 h-8 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2">
                {t('values.accessible.title')}
              </h3>
              <p class="text-gray-600">
                {t('values.accessible.description')}
              </p>
            </div>
            <div class="text-center p-6">
              <div
                class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4"
              >
                <svg
                  class="w-8 h-8 text-green-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2">
                {t('values.compassionate.title')}
              </h3>
              <p class="text-gray-600">
                {t('values.compassionate.description')}
              </p>
            </div>
            <div class="text-center p-6">
              <div
                class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4"
              >
                <svg
                  class="w-8 h-8 text-purple-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2">
                {t('values.evidenceBased.title')}
              </h3>
              <p class="text-gray-600">
                {t('values.evidenceBased.description')}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Our Approach Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('approach.title')}
          </h2>
          <div class="prose prose-lg max-w-none text-gray-600">
            <p>{t('approach.paragraph1')}</p>
            <p>{t('approach.paragraph2')}</p>
            <p>{t('approach.paragraph3')}</p>
          </div>
        </div>
      </section>

      <!-- What We Offer Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('offers.title')}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="border-l-4 border-blue-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('offers.guides.title')}
              </h3>
              <p class="text-gray-600">
                {t('offers.guides.description')}
              </p>
            </div>
            <div class="border-l-4 border-green-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('offers.resources.title')}
              </h3>
              <p class="text-gray-600">
                {t('offers.resources.description')}
              </p>
            </div>
            <div class="border-l-4 border-purple-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('offers.multilingual.title')}
              </h3>
              <p class="text-gray-600">
                {t('offers.multilingual.description')}
              </p>
            </div>
            <div class="border-l-4 border-orange-500 pl-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('offers.community.title')}
              </h3>
              <p class="text-gray-600">
                {t('offers.community.description')}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Team Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('team.title')}
          </h2>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            {t('team.description')}
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('team.members.developer.role')}
              </h3>
              <p class="text-gray-600">
                {t('team.members.developer.description')}
              </p>
            </div>
            <div class="text-center">
              <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('team.members.curator.role')}
              </h3>
              <p class="text-gray-600">
                {t('team.members.curator.description')}
              </p>
            </div>
            <div class="text-center">
              <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('team.members.community.role')}
              </h3>
              <p class="text-gray-600">
                {t('team.members.community.description')}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Trust Section -->
      <section class="mb-16">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-6">
            {t('trust.title')}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center p-6 border border-gray-200 rounded-lg">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('trust.privacy.title')}
              </h3>
              <p class="text-gray-600">
                {t('trust.privacy.description')}
              </p>
            </div>
            <div class="text-center p-6 border border-gray-200 rounded-lg">
              <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('trust.openSource.title')}
              </h3>
              <p class="text-gray-600">
                {t('trust.openSource.description')}
              </p>
            </div>
            <div class="text-center p-6 border border-gray-200 rounded-lg">
              <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {t('trust.noAds.title')}
              </h3>
              <p class="text-gray-600">
                {t('trust.noAds.description')}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Important Notice -->
      <section class="mb-16">
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-8">
          <div class="flex items-start">
            <svg
              class="w-6 h-6 text-yellow-600 mt-1 mr-3 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"
              ></path>
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-yellow-800 mb-2">
                {t('disclaimer.title')}
              </h3>
              <p class="text-yellow-700">{t('disclaimer.description')}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Call to Action -->
      <div
        class="text-center bg-gradient-to-r from-blue-600 to-green-600 text-white rounded-lg p-8"
      >
        <h2 class="text-2xl font-bold mb-4">{t('cta.title')}</h2>
        <p class="text-lg mb-6">{t('cta.description')}</p>
        <div class="space-x-4">
          <a
            href={getRelativeLocaleUrl(lang, '/guide/')}
            class="inline-block bg-white text-blue-600 font-semibold px-8 py-3 rounded-lg hover:bg-blue-50 transition-colors"
          >
            {t('cta.guides')}
          </a>
          <a
            href={getRelativeLocaleUrl(lang, '/resources/')}
            class="inline-block bg-transparent border-2 border-white text-white font-semibold px-8 py-3 rounded-lg hover:bg-white hover:text-blue-600 transition-colors"
          >
            {t('cta.resources')}
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
