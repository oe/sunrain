{
  "name": "@sunrain/content-fetcher",
  "version": "1.0.0",
  "description": "Automated content fetching system for mental health resources",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "content-fetcher": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "fetch:books": "dotenv -e .env -- tsx src/cli.ts --type books",
    "fetch:movies": "dotenv -e .env -- tsx src/cli.ts --type movies",
    "fetch:music": "dotenv -e .env -- tsx src/cli.ts --type music",
    "fetch:all": "dotenv -e .env -- tsx src/cli.ts --type all",
    "test:validator": "tsx src/test-validator.ts",
    "test:apple-music": "tsx src/test-apple-music-client.ts",
    "test:apple-music-integration": "tsx src/test-apple-music-integration.ts",
    "i18n:sync": "tsx src/i18n-cli.ts --action sync",
    "i18n:detect": "tsx src/i18n-cli.ts --action detect",
    "i18n:report": "tsx src/i18n-cli.ts --action report",
    "i18n:cleanup": "tsx src/i18n-cli.ts --action cleanup"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "node-fetch": "catalog:",
    "jsonwebtoken": "catalog:",
    "@sunrain/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/jsonwebtoken": "catalog:",
    "dotenv-cli": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
