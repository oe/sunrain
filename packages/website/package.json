{
  "name": "@sunrain/website",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "Mental health resources website built with Astro",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "astro check",
    "type-check": "astro check",
    "check-translations": "pnpm tsx scripts/check-translations.ts",
    "validate-translations": "pnpm tsx scripts/validate-translation-quality.ts --output=reports/translation-quality-report.json",
    "questionnaire": "pnpm tsx scripts/questionnaire-cli.ts",
    "migrate-questionnaires": "pnpm tsx scripts/migrate-questionnaires.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:core": "vitest run test/unit/assessment/AnswerValidator.test.ts test/unit/assessment/QuestionBankManager.test.ts",
    "test:engine": "vitest run test/unit/assessment/AssessmentEngine.test.ts",
    "test:analysis": "vitest run test/unit/assessment/ResultsAnalyzer.test.ts",
    "test:ui:unit": "vitest run test/unit/components/AssessmentTaker.test.tsx",
    "test:ui:unit:shallow": "SHALLOW_ASSESSMENT_TAKER=1 vitest run test/unit/components/AssessmentTaker.test.tsx",
    "test:i18n": "vitest run test/unit/locales/assessmentTranslations.test.ts",
    "test:all": "pnpm test:core && pnpm test:engine && pnpm test:analysis && pnpm test:ui:unit:shallow && pnpm test:i18n"
  },
  "dependencies": {
    "@astrojs/react": "catalog:",
    "@astrojs/sitemap": "catalog:",
    "@astrojs/tailwind": "catalog:",
    "@sunrain/shared": "workspace:*",
    "@tailwindcss/typography": "catalog:",
    "astro": "catalog:",
    "astro-i18n-aut": "catalog:",
    "clsx": "catalog:",
    "daisyui": "catalog:",
    "lucide-react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "sass": "catalog:",
    "tailwindcss": "catalog:"
  },
  "devDependencies": {
    "@astrojs/check": "catalog:",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "playwright": "^1.49.1",
    "tailwindcss-rtl": "^0.9.0",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "^2.1.8"
  }
}
