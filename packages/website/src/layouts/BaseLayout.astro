---
import { getLocale } from 'astro-i18n-aut';
import { createSSGTranslations } from '@/i18n/utils';
import { languages, type Language } from '@sunrain/shared';

import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/tailwind.css';

export interface Props {
  title?: string;
  description?: string;
  lang?: Language;
}

const { title, description, lang } = Astro.props;
const currentLang = lang || (getLocale(Astro.url) as Language);
const t = createSSGTranslations(currentLang);

const pageTitle = title ? `${title} | Sunrain` : `Sunrain - ${t('hero.title')}`;
const pageDescription = description || t('meta.description');

// Generate hreflang links
const alternateLinks = Object.keys(languages).map((locale) => ({
  lang: locale,
  url:
    locale === 'en'
      ? new URL(
          Astro.url.pathname.replace(/^\/[a-z]{2}/, '') || '/',
          Astro.site
        ).href
      : new URL(
          `/${locale}${Astro.url.pathname.replace(/^\/[a-z]{2}/, '')}`,
          Astro.site
        ).href
}));
---

<!doctype html>
<html lang={currentLang} dir={currentLang === 'ar' ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>

    <!-- SEO Meta Tags -->
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Hreflang Links -->
    {
      alternateLinks.map(({ lang, url }) => (
        <link rel="alternate" hreflang={lang} href={url} />
      ))
    }
    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL('/', Astro.site).href}
    />

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta
      property="og:locale"
      content={currentLang === 'zh' ? 'zh_CN' : currentLang}
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />

    <!-- Theme initialization script (must be in head to prevent flash) -->
    <script is:inline>
      (function () {
        const savedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia(
          '(prefers-color-scheme: dark)'
        ).matches;

        if (
          savedTheme === 'dark' ||
          (savedTheme === 'system' && prefersDark) ||
          (!savedTheme && prefersDark)
        ) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>

    <!-- Global language injection for CSR components -->
    <script is:inline define:vars={{ currentLang }}>
      window.__ASTRO_LANGUAGE__ = currentLang;
    </script>
  </head>
  <body
    class="min-h-screen bg-white dark:bg-gray-900 flex flex-col font-sans antialiased"
  >
    <Header lang={currentLang} />
    <main class="flex-1 pt-16">
      <slot />
    </main>
    <Footer lang={currentLang} />
  </body>
</html>
