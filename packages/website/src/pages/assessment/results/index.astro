---
// Static results page - uses client-side rendering for dynamic content
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocale } from 'astro-i18n-aut';
import { createSSGTranslations } from '@/i18n/utils';
import ResultsDisplay from '@/components/assessment/ResultsDisplay';
import type { Language } from '@sunrain/shared';

const currentLang = getLocale(Astro.url) as Language;
// 使用新的SSG翻译系统，不使用React hooks
const t = createSSGTranslations(currentLang, 'assessment');

// SEO metadata
const pageTitle = `${t('results.title')} - ${t('common.title')}`;
const pageDescription = t('results.description');
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="container mx-auto px-4 py-8">
    <!-- Client-side rendered results component -->
    <ResultsDisplay
      client:only="react"
    />
  </main>
</BaseLayout>
