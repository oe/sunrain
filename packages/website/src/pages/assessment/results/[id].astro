---
// Assessment results display and analysis page
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getLocale } from 'astro-i18n-aut';
import { getAssessmentTranslations } from '../../../locales/assessment';
import type { Language } from '@sunrain/shared';

// Disable static generation for dynamic results
export const prerender = false;

const currentLang = getLocale(Astro.url) as Language;
const t = getAssessmentTranslations(currentLang);

// This page will be handled by client-side JavaScript for dynamic content
---

<BaseLayout title={t.results.loading}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <!-- Loading State -->
      <div id="loading-state" class="text-center py-12">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600 dark:text-gray-300">正在加载评测结果...</p>
      </div>

      <!-- Results Interface -->
      <div id="results-interface" class="hidden">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="mb-4">
            <svg class="w-16 h-16 text-green-600 dark:text-green-400 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h1 id="assessment-title" class="text-3xl font-bold text-gray-900 dark:text-white mb-2"></h1>
          <p class="text-gray-600 dark:text-gray-300">
            完成时间: <span id="completion-time"></span> |
            用时: <span id="total-time"></span>
          </p>
        </div>

        <!-- Risk Level Alert -->
        <div id="risk-alert" class="hidden mb-8">
          <div class="p-4 rounded-lg border">
            <div class="flex items-center">
              <svg id="risk-icon" class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 id="risk-title" class="font-semibold"></h3>
                <p id="risk-message" class="text-sm mt-1"></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Results Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
          <!-- Scores Summary -->
          <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">评测结果</h2>
              <div id="scores-container" class="space-y-4">
                <!-- Scores will be dynamically inserted here -->
              </div>
            </div>
          </div>

          <!-- Quick Stats -->
          <div class="space-y-6">
            <!-- Overall Score -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">总体评估</h3>
              <div class="text-center">
                <div id="overall-score-circle" class="relative w-24 h-24 mx-auto mb-4">
                  <svg class="w-24 h-24 transform -rotate-90" viewBox="0 0 100 100">
                    <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"></circle>
                    <circle id="score-circle" cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-blue-600 dark:text-blue-400" stroke-dasharray="251.2" stroke-dashoffset="251.2" stroke-linecap="round"></circle>
                  </svg>
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span id="overall-score-text" class="text-xl font-bold text-gray-900 dark:text-white"></span>
                  </div>
                </div>
                <p id="overall-score-label" class="text-sm text-gray-600 dark:text-gray-300"></p>
              </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">快速操作</h3>
              <div class="space-y-3">
                <button id="share-btn" class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                  分享结果
                </button>
                <button id="save-pdf-btn" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                  保存为PDF
                </button>
                <a href="/assessment/history/" class="block w-full px-4 py-2 text-center border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                  查看历史
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Detailed Interpretation -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6 mb-8">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">详细解释</h2>
          <div id="interpretation-text" class="prose dark:prose-invert max-w-none">
            <!-- Interpretation will be inserted here -->
          </div>
        </div>

        <!-- Visualizations -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
          <!-- Score Chart -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">分数分布</h3>
            <div id="score-chart" class="h-64">
              <!-- Chart will be rendered here -->
            </div>
          </div>

          <!-- Risk Distribution -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">风险评估</h3>
            <div id="risk-chart" class="h-64">
              <!-- Risk chart will be rendered here -->
            </div>
          </div>
        </div>

        <!-- Recommendations -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6 mb-8">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">个性化建议</h2>
          <div id="recommendations-container" class="space-y-4">
            <!-- Recommendations will be dynamically inserted here -->
          </div>
        </div>

        <!-- Resource Recommendations -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-6 mb-8">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">推荐资源</h2>
          <div id="resources-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Resource recommendations will be inserted here -->
          </div>
        </div>

        <!-- Next Steps -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-lg p-6 border border-blue-200 dark:border-blue-800">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">下一步行动</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="/assessment/" class="flex items-center p-4 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow">
              <svg class="w-8 h-8 text-blue-600 dark:text-blue-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">更多评测</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">探索其他评测工具</p>
              </div>
            </a>

            <a href="/practice" class="flex items-center p-4 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow">
              <svg class="w-8 h-8 text-green-600 dark:text-green-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">开始练习</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">尝试相关的心理练习</p>
              </div>
            </a>

            <a href="/resources" class="flex items-center p-4 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow">
              <svg class="w-8 h-8 text-purple-600 dark:text-purple-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">浏览资源</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">查看疗愈资源库</p>
              </div>
            </a>
          </div>
        </div>

        <!-- Disclaimer -->
        <div class="mt-8 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
          <div class="flex">
            <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <div>
              <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
                重要提醒
              </h3>
              <p class="text-sm text-yellow-700 dark:text-yellow-300 mt-1">
                此评测结果仅供参考，不能替代专业的心理健康诊断。如果您感到困扰或需要帮助，请咨询专业的心理健康专家。
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Error State -->
      <div id="error-state" class="hidden text-center py-12">
        <svg class="w-16 h-16 text-red-600 dark:text-red-400 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">加载失败</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">无法加载评测结果，请刷新页面重试。</p>
        <button onclick="window.location.reload()" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
          刷新页面
        </button>
      </div>
    </div>
  </main>

  <script>
    import { resultsAnalyzer } from '../../../lib/assessment/ResultsAnalyzer.ts';
    import { resourceRecommendationEngine } from '../../../lib/assessment/ResourceRecommendationEngine.ts';
    import { questionBankManager } from '../../../lib/assessment/QuestionBankManager.ts';

    class ResultsInterface {
      constructor() {
        this.resultId = this.getResultIdFromUrl();
        this.result = null;
        this.assessmentType = null;

        this.initializeInterface();
      }

      getResultIdFromUrl() {
        const pathParts = window.location.pathname.split('/');
        return pathParts[pathParts.length - 1];
      }

      async initializeInterface() {
        try {
          // Get result
          this.result = resultsAnalyzer.getResult(this.resultId);
          if (!this.result) {
            throw new Error('Result not found');
          }

          // Get assessment type
          this.assessmentType = questionBankManager.getAssessmentType(this.result.assessmentTypeId);
          if (!this.assessmentType) {
            throw new Error('Assessment type not found');
          }

          // Load and display results
          this.displayResults();

          // Hide loading, show interface
          document.getElementById('loading-state').classList.add('hidden');
          document.getElementById('results-interface').classList.remove('hidden');

        } catch (error) {
          console.error('Failed to load results:', error);
          this.showError();
        }
      }

      displayResults() {
        // Set basic info
        document.getElementById('assessment-title').textContent = this.assessmentType.name;
        document.getElementById('completion-time').textContent = this.formatDate(this.result.completedAt);
        document.getElementById('total-time').textContent = this.formatDuration(this.result.totalTimeSpent);

        // Display risk alert if needed
        this.displayRiskAlert();

        // Display scores
        this.displayScores();

        // Display interpretation
        this.displayInterpretation();

        // Display recommendations
        this.displayRecommendations();

        // Display resource recommendations
        this.displayResourceRecommendations();

        // Setup event listeners
        this.setupEventListeners();

        // Render charts
        this.renderCharts();
      }

      displayRiskAlert() {
        if (!this.result.riskLevel || this.result.riskLevel === 'low') return;

        const alertDiv = document.getElementById('risk-alert');
        const titleEl = document.getElementById('risk-title');
        const messageEl = document.getElementById('risk-message');

        alertDiv.classList.remove('hidden');

        if (this.result.riskLevel === 'high') {
          alertDiv.className = 'mb-8 p-4 rounded-lg border bg-red-50 dark:bg-red-900/20 border-red-200 dark:border-red-800';
          titleEl.className = 'font-semibold text-red-800 dark:text-red-200';
          titleEl.textContent = '需要关注';
          messageEl.className = 'text-sm mt-1 text-red-700 dark:text-red-300';
          messageEl.textContent = '您的评测结果显示可能需要专业帮助。建议咨询心理健康专家或拨打心理援助热线。';
        } else if (this.result.riskLevel === 'medium') {
          alertDiv.className = 'mb-8 p-4 rounded-lg border bg-yellow-50 dark:bg-yellow-900/20 border-yellow-200 dark:border-yellow-800';
          titleEl.className = 'font-semibold text-yellow-800 dark:text-yellow-200';
          titleEl.textContent = '建议关注';
          messageEl.className = 'text-sm mt-1 text-yellow-700 dark:text-yellow-300';
          messageEl.textContent = '您的评测结果显示有一些需要关注的方面。建议采取一些自我护理措施或考虑寻求支持。';
        }
      }

      displayScores() {
        const container = document.getElementById('scores-container');
        const scores = Object.entries(this.result.scores);

        scores.forEach(([scoreId, scoreData]) => {
          const scoreDiv = document.createElement('div');
          scoreDiv.className = 'flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg';

          const leftDiv = document.createElement('div');
          leftDiv.innerHTML = `
            <h4 class="font-medium text-gray-900 dark:text-white">${scoreId}</h4>
            <p class="text-sm text-gray-600 dark:text-gray-300">${scoreData.description}</p>
          `;

          const rightDiv = document.createElement('div');
          rightDiv.className = 'text-right';

          const scoreSpan = document.createElement('span');
          scoreSpan.className = `text-2xl font-bold ${this.getRiskLevelColor(scoreData.riskLevel)}`;
          scoreSpan.textContent = scoreData.value;

          const labelSpan = document.createElement('span');
          labelSpan.className = 'block text-sm text-gray-600 dark:text-gray-300';
          labelSpan.textContent = scoreData.label;

          rightDiv.appendChild(scoreSpan);
          rightDiv.appendChild(labelSpan);

          scoreDiv.appendChild(leftDiv);
          scoreDiv.appendChild(rightDiv);
          container.appendChild(scoreDiv);
        });

        // Update overall score circle
        this.updateOverallScore();
      }

      updateOverallScore() {
        const scores = Object.values(this.result.scores);
        if (scores.length === 0) return;

        // Calculate average score (simplified)
        const totalScore = scores.reduce((sum, score) => sum + score.value, 0);
        const maxPossibleScore = scores.length * 10; // Assuming max score of 10 per dimension
        const percentage = (totalScore / maxPossibleScore) * 100;

        // Update circle
        const circle = document.getElementById('score-circle');
        const circumference = 2 * Math.PI * 40; // radius = 40
        const offset = circumference - (percentage / 100) * circumference;
        circle.style.strokeDashoffset = offset;

        // Update text
        document.getElementById('overall-score-text').textContent = Math.round(percentage) + '%';
        document.getElementById('overall-score-label').textContent = this.getOverallScoreLabel(percentage);
      }

      getOverallScoreLabel(percentage) {
        if (percentage >= 80) return '优秀';
        if (percentage >= 60) return '良好';
        if (percentage >= 40) return '一般';
        if (percentage >= 20) return '需要关注';
        return '需要帮助';
      }

      getRiskLevelColor(riskLevel) {
        switch (riskLevel) {
          case 'high': return 'text-red-600 dark:text-red-400';
          case 'medium': return 'text-yellow-600 dark:text-yellow-400';
          case 'low': return 'text-green-600 dark:text-green-400';
          default: return 'text-gray-600 dark:text-gray-400';
        }
      }

      displayInterpretation() {
        const container = document.getElementById('interpretation-text');
        container.innerHTML = `<p class="text-gray-700 dark:text-gray-300 leading-relaxed">${this.result.interpretation}</p>`;
      }

      displayRecommendations() {
        const container = document.getElementById('recommendations-container');

        this.result.recommendations.forEach((recommendation, index) => {
          const recDiv = document.createElement('div');
          recDiv.className = 'flex items-start p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800';

          recDiv.innerHTML = `
            <div class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3 mt-0.5">
              ${index + 1}
            </div>
            <p class="text-gray-700 dark:text-gray-300">${recommendation}</p>
          `;

          container.appendChild(recDiv);
        });
      }

      displayResourceRecommendations() {
        const container = document.getElementById('resources-container');

        // Get resource recommendations
        const recommendations = resourceRecommendationEngine.getRecommendations(this.result, 6);

        recommendations.forEach(rec => {
          const resourceDiv = document.createElement('div');
          resourceDiv.className = 'bg-gray-50 dark:bg-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow';

          const typeIcon = this.getResourceTypeIcon(rec.type);
          const priorityColor = this.getPriorityColor(rec.priority);

          resourceDiv.innerHTML = `
            <div class="flex items-start justify-between mb-3">
              <div class="flex items-center">
                ${typeIcon}
                <span class="ml-2 text-sm font-medium text-gray-900 dark:text-white">${rec.title}</span>
              </div>
              <span class="px-2 py-1 text-xs font-medium rounded-full ${priorityColor}">
                ${rec.priority === 'high' ? '高优先级' : rec.priority === 'medium' ? '中优先级' : '低优先级'}
              </span>
            </div>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">${rec.description}</p>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500 dark:text-gray-400">${rec.estimatedTimeCommitment || '时间不定'}</span>
              <button class="text-sm text-blue-600 dark:text-blue-400 hover:underline" onclick="window.open('${rec.resourceLinks[0]?.url || '#'}', '_blank')">
                查看详情
              </button>
            </div>
          `;

          container.appendChild(resourceDiv);
        });
      }

      getResourceTypeIcon(type) {
        const iconClass = 'w-4 h-4';
        switch (type) {
          case 'immediate':
            return `<svg class="${iconClass} text-red-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>`;
          case 'short_term':
            return `<svg class="${iconClass} text-yellow-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>`;
          case 'long_term':
            return `<svg class="${iconClass} text-green-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>`;
          default:
            return `<svg class="${iconClass} text-gray-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>`;
        }
      }

      getPriorityColor(priority) {
        switch (priority) {
          case 'high': return 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200';
          case 'medium': return 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200';
          case 'low': return 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200';
          default: return 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200';
        }
      }

      renderCharts() {
        // Simple bar chart for scores
        this.renderScoreChart();

        // Simple pie chart for risk distribution
        this.renderRiskChart();
      }

      renderScoreChart() {
        const container = document.getElementById('score-chart');
        const scores = Object.entries(this.result.scores);

        container.innerHTML = '';

        scores.forEach(([scoreId, scoreData]) => {
          const barContainer = document.createElement('div');
          barContainer.className = 'mb-4';

          const percentage = (scoreData.value / 10) * 100; // Assuming max score of 10

          barContainer.innerHTML = `
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">${scoreId}</span>
              <span class="text-sm text-gray-600 dark:text-gray-400">${scoreData.value}</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
              <div class="h-2 rounded-full ${this.getRiskLevelBgColor(scoreData.riskLevel)}" style="width: ${percentage}%"></div>
            </div>
          `;

          container.appendChild(barContainer);
        });
      }

      renderRiskChart() {
        const container = document.getElementById('risk-chart');
        const scores = Object.values(this.result.scores);

        const riskCounts = { low: 0, medium: 0, high: 0 };
        scores.forEach(score => {
          if (score.riskLevel) {
            riskCounts[score.riskLevel]++;
          }
        });

        const total = Object.values(riskCounts).reduce((sum, count) => sum + count, 0);

        container.innerHTML = '';

        Object.entries(riskCounts).forEach(([level, count]) => {
          if (count === 0) return;

          const percentage = (count / total) * 100;
          const riskDiv = document.createElement('div');
          riskDiv.className = 'mb-4';

          riskDiv.innerHTML = `
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                ${level === 'low' ? '低风险' : level === 'medium' ? '中风险' : '高风险'}
              </span>
              <span class="text-sm text-gray-600 dark:text-gray-400">${count} 项</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
              <div class="h-2 rounded-full ${this.getRiskLevelBgColor(level)}" style="width: ${percentage}%"></div>
            </div>
          `;

          container.appendChild(riskDiv);
        });
      }

      getRiskLevelBgColor(riskLevel) {
        switch (riskLevel) {
          case 'high': return 'bg-red-600';
          case 'medium': return 'bg-yellow-600';
          case 'low': return 'bg-green-600';
          default: return 'bg-gray-600';
        }
      }

      setupEventListeners() {
        // Share button
        document.getElementById('share-btn').addEventListener('click', () => {
          this.shareResults();
        });

        // Save PDF button
        document.getElementById('save-pdf-btn').addEventListener('click', () => {
          this.saveToPDF();
        });
      }

      shareResults() {
        if (navigator.share) {
          navigator.share({
            title: `${this.assessmentType.name} - 评测结果`,
            text: `我刚完成了${this.assessmentType.name}，查看我的结果！`,
            url: window.location.href
          });
        } else {
          // Fallback: copy to clipboard
          navigator.clipboard.writeText(window.location.href).then(() => {
            alert('结果链接已复制到剪贴板！');
          });
        }
      }

      saveToPDF() {
        // Simple implementation - in a real app, you'd use a library like jsPDF
        window.print();
      }

      formatDate(date) {
        return new Date(date).toLocaleString('zh-CN', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        });
      }

      formatDuration(seconds) {
        const minutes = Math.floor(seconds / 60);
        const remainingSeconds = seconds % 60;
        return `${minutes}分${remainingSeconds}秒`;
      }

      showError() {
        document.getElementById('loading-state').classList.add('hidden');
        document.getElementById('error-state').classList.remove('hidden');
      }
    }

    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', () => {
      new ResultsInterface();
    });
  </script>
</BaseLayout>
