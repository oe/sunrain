---
// Continue incomplete assessments page
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocale } from 'astro-i18n-aut';
import { getAssessmentTranslations } from '@/locales/assessment';
import ContinueAssessmentPage from '@/components/assessment/ContinueAssessmentPage';
import type { Language } from '@sunrain/shared';

const currentLang = getLocale(Astro.url) as Language;
const t = getAssessmentTranslations(currentLang);
---

<BaseLayout title={t.continue.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
          {t.continue.title}
        </h1>
        <p class="text-gray-600 dark:text-gray-300">{t.continue.subtitle}</p>
      </div>

      <!-- Use the new React ContinueAssessmentPage component with client:load directive -->
      <ContinueAssessmentPage client:load />
    </div>
  </main>


</BaseLayout>
