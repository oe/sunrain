---
// Continue incomplete assessments page
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLocale } from 'astro-i18n-aut';
import { getAssessmentTranslations } from '../../locales/assessment';
import type { Language } from '@sunrain/shared';

const currentLang = getLocale(Astro.url) as Language;
const t = getAssessmentTranslations(currentLang);
---

<BaseLayout title={t.continue.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
          {t.continue.title}
        </h1>
        <p class="text-gray-600 dark:text-gray-300">{t.continue.subtitle}</p>
      </div>

      <!-- Loading State -->
      <div id="loading-state" class="text-center py-12">
        <div
          class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"
        >
        </div>
        <p class="text-gray-600 dark:text-gray-300">{t.continue.loading}</p>
      </div>

      <!-- No Active Sessions -->
      <div id="no-sessions-state" class="hidden text-center py-12">
        <svg
          class="w-16 h-16 text-gray-400 dark:text-gray-600 mx-auto mb-4"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
          没有未完成的评测
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          您目前没有需要继续的评测
        </p>
        <a
          href="/assessment/"
          class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
        >
          开始新评测
          <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>

      <!-- Active Sessions List -->
      <div id="sessions-list" class="hidden space-y-6">
        <!-- Sessions will be dynamically inserted here -->
      </div>

      <!-- Actions -->
      <div id="actions-section" class="hidden mt-8 text-center">
        <div
          class="flex flex-col sm:flex-row justify-center space-y-3 sm:space-y-0 sm:space-x-4"
        >
          <a
            href="/assessment/"
            class="px-6 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
          >
            开始新评测
          </a>
          <button
            id="clear-all-btn"
            class="px-6 py-2 text-red-600 dark:text-red-400 border border-red-300 dark:border-red-600 rounded-md hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors"
          >
            清除所有未完成评测
          </button>
        </div>
      </div>
    </div>
  </main>

  <script type="module">
    import { assessmentEngine } from '../../lib/assessment/AssessmentEngine.js';
    import { questionBankManager } from '../../lib/assessment/QuestionBankManager.js';

    class ContinueAssessment {
      constructor() {
        this.activeSessions = [];
        this.initializeInterface();
      }

      async initializeInterface() {
        try {
          // Get active and paused sessions
          this.activeSessions = [
            ...assessmentEngine.getActiveSessions(),
            ...assessmentEngine
              .getAllSessions()
              .filter((s) => s.status === 'paused')
          ];

          // Hide loading
          document.getElementById('loading-state').classList.add('hidden');

          if (this.activeSessions.length === 0) {
            document
              .getElementById('no-sessions-state')
              .classList.remove('hidden');
          } else {
            this.displaySessions();
            document.getElementById('sessions-list').classList.remove('hidden');
            document
              .getElementById('actions-section')
              .classList.remove('hidden');
          }

          this.setupEventListeners();
        } catch (error) {
          console.error('Failed to load active sessions:', error);
          this.showError();
        }
      }

      displaySessions() {
        const container = document.getElementById('sessions-list');
        container.innerHTML = '';

        this.activeSessions.forEach((session) => {
          const sessionDiv = this.createSessionItem(session);
          container.appendChild(sessionDiv);
        });
      }

      createSessionItem(session) {
        const assessmentType = questionBankManager.getAssessmentType(
          session.assessmentTypeId
        );
        const progress = assessmentEngine.getProgress(session.id);

        const sessionDiv = document.createElement('div');
        sessionDiv.className =
          'bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 p-6';

        const statusClass =
          session.status === 'active'
            ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
            : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200';
        const statusText = session.status === 'active' ? '进行中' : '已暂停';

        sessionDiv.innerHTML = `
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                  ${assessmentType?.name || '未知评测'}
                </h3>
                <span class="px-2 py-1 text-xs font-medium rounded-full ${statusClass}">
                  ${statusText}
                </span>
              </div>
              <p class="text-sm text-gray-600 dark:text-gray-300 mb-3">
                ${assessmentType?.description || ''}
              </p>
              <div class="flex items-center space-x-6 text-sm text-gray-500 dark:text-gray-400">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                  </svg>
                  开始时间: ${this.formatDate(session.startedAt)}
                </div>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                  </svg>
                  已用时: ${this.formatDuration(session.timeSpent)}
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-2 ml-4">
              <button
                class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
                onclick="this.continueSession('${session.id}')"
              >
                继续评测
              </button>
              <button
                class="px-3 py-2 text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-md transition-colors"
                onclick="this.deleteSession('${session.id}')"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Progress Bar -->
          <div class="mb-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                进度: ${progress?.current || 0} / ${progress?.total || 0} 题
              </span>
              <span class="text-sm text-gray-600 dark:text-gray-400">
                ${progress?.percentage || 0}%
              </span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
              <div
                class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                style="width: ${progress?.percentage || 0}%"
              ></div>
            </div>
          </div>

          <!-- Answers Summary -->
          <div class="text-sm text-gray-600 dark:text-gray-300">
            <span class="font-medium">已回答:</span> ${session.answers.length} 题
            ${
              progress?.estimatedTimeRemaining
                ? `<span class="ml-4"><span class="font-medium">预计剩余:</span> ${Math.round(progress.estimatedTimeRemaining / 60)} 分钟</span>`
                : ''
            }
          </div>
        `;

        return sessionDiv;
      }

      setupEventListeners() {
        // Clear all button
        const clearAllBtn = document.getElementById('clear-all-btn');
        if (clearAllBtn) {
          clearAllBtn.addEventListener('click', () => this.clearAllSessions());
        }

        // Global methods for inline event handlers
        window.continueSession = (sessionId) => this.continueSession(sessionId);
        window.deleteSession = (sessionId) => this.deleteSession(sessionId);
      }

      continueSession(sessionId) {
        try {
          const session = assessmentEngine.resumeAssessment(sessionId);
          if (session) {
            // Redirect to assessment page
            window.location.href = `/assessment/take/${session.assessmentTypeId}/?session=${sessionId}`;
          } else {
            this.showMessage('无法继续评测，请重试', 'error');
          }
        } catch (error) {
          console.error('Failed to continue session:', error);
          this.showMessage('继续评测失败，请重试', 'error');
        }
      }

      deleteSession(sessionId) {
        if (confirm('确定要删除这个未完成的评测吗？所有进度将丢失。')) {
          try {
            const success = assessmentEngine.deleteSession(sessionId);
            if (success) {
              // Remove from local array
              this.activeSessions = this.activeSessions.filter(
                (s) => s.id !== sessionId
              );

              // Refresh display
              if (this.activeSessions.length === 0) {
                document
                  .getElementById('sessions-list')
                  .classList.add('hidden');
                document
                  .getElementById('actions-section')
                  .classList.add('hidden');
                document
                  .getElementById('no-sessions-state')
                  .classList.remove('hidden');
              } else {
                this.displaySessions();
              }

              this.showMessage('评测已删除', 'success');
            } else {
              this.showMessage('删除失败，请重试', 'error');
            }
          } catch (error) {
            console.error('Failed to delete session:', error);
            this.showMessage('删除失败，请重试', 'error');
          }
        }
      }

      clearAllSessions() {
        if (confirm('确定要清除所有未完成的评测吗？所有进度将丢失。')) {
          try {
            let deletedCount = 0;

            for (const session of this.activeSessions) {
              if (assessmentEngine.deleteSession(session.id)) {
                deletedCount++;
              }
            }

            if (deletedCount > 0) {
              this.activeSessions = [];
              document.getElementById('sessions-list').classList.add('hidden');
              document
                .getElementById('actions-section')
                .classList.add('hidden');
              document
                .getElementById('no-sessions-state')
                .classList.remove('hidden');

              this.showMessage(
                `已清除 ${deletedCount} 个未完成的评测`,
                'success'
              );
            } else {
              this.showMessage('清除失败，请重试', 'error');
            }
          } catch (error) {
            console.error('Failed to clear all sessions:', error);
            this.showMessage('清除失败，请重试', 'error');
          }
        }
      }

      formatDate(date) {
        return new Date(date).toLocaleString('zh-CN', {
          month: 'short',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        });
      }

      formatDuration(seconds) {
        const minutes = Math.floor(seconds / 60);
        const remainingSeconds = seconds % 60;
        if (minutes > 0) {
          return `${minutes}分${remainingSeconds}秒`;
        }
        return `${remainingSeconds}秒`;
      }

      showMessage(message, type = 'info') {
        // Simple toast notification
        const toast = document.createElement('div');
        toast.className = `fixed top-4 right-4 px-4 py-2 rounded-md shadow-lg z-50 ${
          type === 'success'
            ? 'bg-green-600 text-white'
            : type === 'error'
              ? 'bg-red-600 text-white'
              : 'bg-blue-600 text-white'
        }`;
        toast.textContent = message;

        document.body.appendChild(toast);

        setTimeout(() => {
          if (document.body.contains(toast)) {
            document.body.removeChild(toast);
          }
        }, 3000);
      }

      showError() {
        document.getElementById('loading-state').classList.add('hidden');

        const errorDiv = document.createElement('div');
        errorDiv.className = 'text-center py-12';
        errorDiv.innerHTML = `
          <svg class="w-16 h-16 text-red-400 dark:text-red-600 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">加载失败</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">无法加载未完成的评测，请刷新页面重试</p>
          <button onclick="window.location.reload()" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
            刷新页面
          </button>
        `;

        document.querySelector('main .max-w-4xl').appendChild(errorDiv);
      }
    }

    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', () => {
      new ContinueAssessment();
    });
  </script>
</BaseLayout>
