---
// Test page to verify TypeScript path mapping and React integration
import BaseLayout from '@/layouts/BaseLayout.astro';
import InfrastructureTest from '@/components/test/InfrastructureTest';
---

<BaseLayout title="Infrastructure Test">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
      Infrastructure Configuration Test
    </h1>

    <div class="space-y-6">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
          Configuration Status
        </h2>
        <div class="space-y-2">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            ✅ TypeScript configuration: Updated
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            ✅ Path mapping (@/ alias): Configured
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            ✅ React integration: Enabled
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            ✅ Astro configuration: Enhanced
          </p>
        </div>
      </div>

      <!-- React component test -->
      <InfrastructureTest client:load />
    </div>
  </main>
</BaseLayout>
