                {t('features.dailyPractice.description')}
              </p>
              <button
                class="text-sm text-green-600 hover:text-green-700 font-medium"
              >
                {t('features.dailyPractice.button')}
              </button>
            </div>
          </div>
        </div>

        <!-- Quick Relief Module -->
        <div
          class="group bg-white border border-gray-200 rounded-xl p-6 hover:border-purple-300 hover:shadow-sm transition-all duration-200"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div
                class="w-12 h-12 bg-purple-50 rounded-lg flex items-center justify-center text-xl"
              >
                üéß
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t('features.quickRelief.title')}
              </h3>
              <p class="text-sm text-gray-600 mb-4">
                {t('features.quickRelief.description')}
              </p>
              <button
                class="text-sm text-purple-600 hover:text-purple-700 font-medium"
              >
                {t('features.quickRelief.button')}
              </button>
            </div>
          </div>
        </div>

        <!-- Healing Library Module -->
        <div
          class="group bg-white border border-gray-200 rounded-xl p-6 hover:border-pink-300 hover:shadow-sm transition-all duration-200"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div
                class="w-12 h-12 bg-pink-50 rounded-lg flex items-center justify-center text-xl"
