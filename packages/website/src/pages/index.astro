---
import { getLocale } from 'astro-i18n-aut';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { type Language } from '@sunrain/shared';
import { useTranslations, getRelativeLocaleUrl } from '@/i18n/utils';

const lang = getLocale(Astro.url) as Language;
const t = useTranslations(lang, 'home');

// User testimonials data
const testimonials = [
  {
    text: 'This space felt like home.',
    author: 'Anonymous User'
  },
  {
    text: "The self-check helped me realize I wasn't alone.",
    author: 'Community Member'
  },
  {
    text: 'Finally found resources that actually help.',
    author: 'Grateful Visitor'
  },
  {
    text: 'The mindfulness exercises changed my daily routine.',
    author: 'Regular User'
  }
];
---

<BaseLayout
  title={t('hero.title')}
  description={t('meta.description')}
  lang={lang}
>
  <!-- Hero Section -->
  <section
    class="relative min-h-screen bg-gradient-to-br from-pink-50 via-orange-50 to-yellow-50 overflow-hidden"
  >
    <!-- Decorative elements -->
    <div class="absolute inset-0 opacity-20">
      <div
        class="absolute top-20 left-10 w-32 h-32 bg-yellow-300 rounded-full blur-xl"
      >
      </div>
      <div
        class="absolute top-40 right-20 w-24 h-24 bg-pink-300 rounded-full blur-lg"
      >
      </div>
      <div
        class="absolute bottom-32 left-1/4 w-20 h-20 bg-orange-300 rounded-full blur-lg"
      >
      </div>
    </div>

    <div
      class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4 text-center"
    >
      <!-- Hand-drawn sun and rain illustration placeholder -->
      <div class="mb-8 relative">
        <div class="text-8xl mb-4">‚òÄÔ∏è</div>
        <div class="text-4xl text-blue-400 absolute -top-2 -right-4">üåßÔ∏è</div>
        <div
          class="text-2xl text-green-500 absolute -bottom-4 left-1/2 transform -translate-x-1/2"
        >
          üå±
        </div>
      </div>

      <h1
        class="text-5xl md:text-7xl font-bold text-gray-800 mb-6 leading-tight"
      >
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-pink-400"
        >
          {t('hero.tagline')}
        </span>
      </h1>

      <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl font-light">
        {t('hero.description')}
      </p>

      <div class="flex flex-col sm:flex-row gap-4">
        <button
          class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          {t('hero.selfCheckButton')}
        </button>
        <button
          class="bg-white hover:bg-gray-50 text-gray-900 border border-gray-300 hover:border-gray-400 px-8 py-4 rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
        >
          {t('hero.quickRelaxButton')}
        </button>
      </div>
    </div>
  </section>

  <!-- Core Features Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-4">
          {t('features.title')}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {t('features.subtitle')}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Self-Check Module -->
        <div
          class="group bg-white border border-gray-200 rounded-xl p-6 hover:border-blue-300 hover:shadow-sm transition-all duration-200"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div
                class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center text-xl"
              >
                üß†
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t('features.selfCheck.title')}
              </h3>
              <p class="text-sm text-gray-600 mb-4">
                {t('features.selfCheck.description')}
              </p>
              <button
                class="text-sm text-blue-600 hover:text-blue-700 font-medium"
