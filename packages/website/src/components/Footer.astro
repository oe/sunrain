---
import { createSSGTranslations } from '@/i18n/utils';
import { type Language, getRelativeLocaleUrl } from '@sunrain/shared';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = createSSGTranslations(lang);

const currentYear = new Date().getFullYear();

const quickLinks = [
  { key: 'nav.home', href: getRelativeLocaleUrl(lang, '/') },
  { key: 'nav.guide', href: getRelativeLocaleUrl(lang, '/guide/') },
  { key: 'nav.resources', href: getRelativeLocaleUrl(lang, '/resources/') },
  { key: 'nav.about', href: getRelativeLocaleUrl(lang, '/about/') }
];

const features = [
  { key: 'footer.selfCheck', href: '#' },
  {
    key: 'footer.healingResources',
    href: getRelativeLocaleUrl(lang, '/resources/')
  },
  { key: 'footer.crisisHotline', href: '#' },
  { key: 'footer.multilingual', href: '#' }
];
---

<footer
  class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 transition-colors duration-300"
  role="contentinfo"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-3 mb-4">
          <div class="relative" aria-hidden="true">
            <span class="text-xl">‚òÄÔ∏è</span>
            <span class="text-xs absolute -top-1 -right-1">üåßÔ∏è</span>
          </div>
          <span class="text-xl font-semibold text-gray-900 dark:text-white">
            Sunrain.me
          </span>
        </div>
        <p
          class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-4"
        >
          {t('footer.mission')}
        </p>
        <div class="flex space-x-4">
          <a
            href="https://github.com/sunrain-me"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 p-1 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
            aria-label="Visit our GitHub repository"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <nav aria-labelledby="footer-quicklinks">
        <h3
          id="footer-quicklinks"
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
        >
          {t('footer.quickLinks')}
        </h3>
        <ul class="space-y-3" role="list">
          {
            quickLinks.map(({ key, href }) => (
              <li>
                <a
                  href={href}
                  class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded px-1 py-0.5 -mx-1 -my-0.5"
                >
                  {t(key)}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <!-- Features -->
      <nav aria-labelledby="footer-features">
        <h3
          id="footer-features"
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
        >
          {t('footer.features')}
        </h3>
        <ul class="space-y-3" role="list">
          {
            features.map(({ key, href }) => (
              <li>
                <a
                  href={href}
                  class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded px-1 py-0.5 -mx-1 -my-0.5"
                >
                  {t(key)}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <!-- Support -->
      <nav aria-labelledby="footer-support">
        <h3
          id="footer-support"
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
        >
          {t('footer.support')}
        </h3>
        <ul class="space-y-3" role="list">
          <li>
            <a
              href="#"
              class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded px-1 py-0.5 -mx-1 -my-0.5"
            >
              {t('footer.helpCenter')}
            </a>
          </li>
          <li>
            <a
              href="#"
              class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded px-1 py-0.5 -mx-1 -my-0.5"
            >
              {t('footer.privacy')}
            </a>
          </li>
          <li>
            <a
              href="#"
              class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded px-1 py-0.5 -mx-1 -my-0.5"
            >
              {t('footer.accessibility')}
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Bottom Section -->
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          {t('footer.copyright').replace('2025', currentYear.toString())}
        </p>
        <div
          class="mt-4 md:mt-0 flex items-center space-x-6 text-sm text-gray-500 dark:text-gray-400"
        >
          <span
            class="flex items-center"
            title="Privacy-focused platform with no data collection"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
              ></path>
            </svg>
            <span>Privacy First</span>
          </span>
          <span class="flex items-center" title="Accessible to all users">
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"
              ></path>
            </svg>
            <span>Accessible</span>
          </span>
          <span class="flex items-center" title="Open source project">
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              ></path>
            </svg>
            <span>Open Source</span>
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>
